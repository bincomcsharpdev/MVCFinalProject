@model ResumeManager.Models.Anthonia_PhotohDto
@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/photo.css" asp-append-version="true" />

<h2>Delete Photo</h2>

<p>Are you sure you want to delete this photo?</p>

<div>
    <h3>@Model.Title</h3>
    <img src="@Url.Action("ViewImage", "Photo", new { id = Model.Id })" alt="@Model.Title" width="200" />
    <p>@Model.Description</p>
</div>

@using (Html.BeginForm("Delete", "Photo", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <input type="submit" value="Delete" class="btn" />
    @Html.ActionLink("Cancel", "Gallery", null, new { @class = "link" })
}


