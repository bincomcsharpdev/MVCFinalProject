@model MVCFinalProject.Models.DTOs.PortfolioItemDto

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>@(Model.Id == Guid.Empty ? "Create New Portfolio Item" : "Edit Portfolio Item")</h4>
        </div>
        <div class="card-body">
            <form asp-action="@(Model.Id == Guid.Empty ? "Create" : "Edit")"
                  asp-controller="PortfolioView"
                  enctype="multipart/form-data"
                  method="post">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="FilePath" class="form-label">Upload Image</label>
                    <input asp-for="FilePath" type="file" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Save Portfolio Item</button>
            </form>
        </div>
    </div>
</div>
