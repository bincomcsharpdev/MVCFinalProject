@model IEnumerable<JohnPortfolio.Models.JohnCar>

@{
    ViewData["Title"] = "Cars List";
}

<h2>Cars List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Car</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Manufacturer</th>
            <th>Model</th>
            <th>Year</th>
            <th>Image</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Manufacturer</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>
                        @if (car.ImageData != null)
                        {
                            // Convert the image data to Base64 string within the loop
                            var imageBase64 = Convert.ToBase64String(car.ImageData);
                            var imageSrc = $"data:image/jpeg;base64,{imageBase64}";
                        <img src="@imageSrc" alt="@car.Model" style="width: 100px;" />
                        }
                        else
                        {
                        <img src="/images/placeholder.png" alt="No Image" style="width: 100px;" /> <!-- Use a placeholder image -->
                        }
                </td>
                <td>@car.DateAdded.ToString("MMMM dd, yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
