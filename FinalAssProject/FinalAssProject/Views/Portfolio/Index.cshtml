<!-- Index.cshtml -->
@model List<FinalAssProject.Models.PortfolioItem>

<h2>Projects/Portfolio</h2>
<a asp-action="Upload" class="btn btn-primary">Upload New Project</a>

<div class="portfolio-items">
    @foreach (var item in Model)
    {
        <div class="portfolio-item">
            <h3>@item.Title</h3>
            <p>@item.Description</p>
            @if (item.ImageData != null)
            {
                <img src="data:@item.ImageMimeType;base64,@Convert.ToBase64String(item.ImageData)" alt="@item.Title" />
            }
            @if (item.DocumentData != null)
            {
                <a href="data:@item.DocumentMimeType;base64,@Convert.ToBase64String(item.DocumentData)" download="@item.Title">Download Document</a>
            }
        </div>
    }
</div>
