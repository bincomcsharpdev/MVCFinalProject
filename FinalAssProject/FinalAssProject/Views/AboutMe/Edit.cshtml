@model AboutMe

<h2 style="font-family: Arial, sans-serif; color: #333; text-align: center; margin-bottom: 20px;">Edit About Me</h2>

<form asp-action="Save" method="post" style="max-width: 500px; margin: 0 auto; font-family: Arial, sans-serif;">
    <div style="margin-bottom: 15px;">
        <label for="FullName" style="display: block; font-weight: bold; color: #555;">Full Name</label>
        <input asp-for="FullName" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 1rem;" />
    </div>

    <div style="margin-bottom: 15px;">
        <label for="Bio" style="display: block; font-weight: bold; color: #555;">Bio</label>
        <textarea asp-for="Bio" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 1rem; height: 120px;"></textarea>
    </div>

    <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; font-size: 1rem; cursor: pointer;">
        Save
    </button>
</form>
